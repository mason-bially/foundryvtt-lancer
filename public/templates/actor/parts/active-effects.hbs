
<div class="card">
    <nav class="lancer-tabs" data-group="effects">
        <a class="item lancer-tab" data-tab="effects">{{localize "lancer.sheet-parts.active-effects.effects"}}</a>
        <a class="item lancer-tab" data-tab="conditions">{{localize "lancer.sheet-parts.active-effects.conditions"}}</a>
        <a class="item lancer-tab" data-tab="status">{{localize "lancer.sheet-parts.active-effects.statuses"}}</a>
    </nav>

    <section class="sheet-body">
    {{#each effects as |section sid|}}
        <div class="tab" data-group="effects" data-tab="{{sid}}">
            
        {{!--
            <li class="items-header flexrow" data-effect-type="{{section.type}}">
                <h3 class="item-name effect-name flexrow">{{sid}}</h3>
                <div class="effect-source">{{localize "DND5E.Source"}}</div>
                <div class="effect-source">{{localize "DND5E.Duration"}}</div>
                <div class="item-controls effect-controls flexrow">
                    <a class="effect-control" data-action="create" title="{{localize 'DND5E.EffectCreate'}}">
                        <i class="fas fa-plus"></i> {{localize "DND5E.Add"}}
                    </a>
                </div>
            </li>
        --}}
            <ol class="item-list">
            {{#each section as |effect|}}
                <li class="item effect flexrow" data-effect-id="{{effect.id}}">
                    <div class="item-name effect-name flexrow">
                        <img class="item-image" src="{{effect.data.icon}}"/>
                        <h4>{{effect.data.label}}</h4>
                    </div>
                    <div class="effect-source">{{effect.sourceName}}</div>
                    <div class="effect-duration">{{effect.duration.label}}</div>
                    <div class="item-controls effect-controls flexrow">
                        <a class="effect-control" data-action="toggle"
                        title="{{#if effect.data.disabled}}{{localize 'DND5E.EffectEnable'}}{{else}}{{localize 'DND5E.EffectDisable'}}{{/if}}">
                            <i class="fas {{#if effect.data.disabled}}fa-check{{else}}fa-times{{/if}}"></i>
                        </a>
                        <a class="effect-control" data-action="edit" title="{{localize 'LANCER.EffectEdit'}}">
                            <i class="fas fa-edit"></i>
                        </a>
                        <a class="effect-control" data-action="delete" title="{{localize 'LANCER.EffectDelete'}}">
                            <i class="fas fa-trash"></i>
                        </a>
                    </div>
                </li>
            {{/each}}
            </ol>
        </div>
    {{/each}}
    </section>
</ol>
